include task-talk

mixin task(task)

	- var today = new Date();

	.tile.ph-1.pv-1
		.task-calendar.calendar.hidden-xs.hidden-sm(class=task.state == 'past' ? 'calendar--past' : null)
			.calendar__header=task._.startDate.format('MMM')
			.calendar__body
				.calendar__date=task._.startDate.format('DD')
				.calendar__year=task._.startDate.format('YYYY')
		.task-content
			h2.mv-5= task.name
			h5.mb-1=task._.startDate.format('dddd D MMM YYYY')
				|  from #{task._.startDate.format('h:mma')} - #{task._.endDate.format('h:mma')}
			if task.description
				p!= task.description
			if task.talks.length
				hr.mv-2
				ul.task-talks
					each talk in task.talks
						+task-talk(talk)

		if task.state == 'active'
			hr.mv-2
			if user
				if task.rsvpsAvailable || rsvpStatus.rsvped && rsvpStatus.attending
					h4.hero-button-title Are you coming? 
					//	span.text-thin (#{plural(task.remainingRSVPs, '* spot left', '* spots left')})
					include ../layouts/attendance-toggle
				else
					.alert.alert-success.mb-0.text-center No more tickets...
			
			else
				#next-task(data-id=task.id)
					if task.rsvpsAvailable
						a(href='/join', data-from=page.path).btn.btn-primary.btn-lg.btn-block.js-auth-trigger RSVP Now 
							span.text-thin (#{plural(task.remainingRSVPs, '* spot left', '* spots left')})
					else
						.alert.alert-success.mb-0.text-center No more tickets...
		else if task.totalRSVPs
			hr
			.text-center
				.h1.text-muted.mb-0= task.totalRSVPs
				.lead.text-muted people #{task.state == 'active' ? "are attending" : "attended"} this task
			if task.state == 'past'
				ul.list-unstyled.list-inline.text-center
					for rsvp in task.rsvps
						if rsvp.who
							- var attendee = rsvp.who;
							if attendee.isPublic
								li: a(href=attendee.url, title=attendee.name.full)
									img(src=attendee.photo.exists ? attendee._.photo.thumbnail(80,80) : attendee.avatarUrl || '/images/avatar.png', width=40, height=40, alt=attendee.name.full).img-circle
							else
								li(title=attendee.name.full): img(src=attendee.photo.exists ? attendee._.photo.thumbnail(80,80) : attendee.avatarUrl || '/images/avatar.png', width=40, height=40, alt=attendee.name.full).img-circle